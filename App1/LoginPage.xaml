<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.LoginPage"
             Title="Вход">
    <StackLayout Padding="30">
        <Label Text="Вход в Ozon Банк" FontSize="Large" HorizontalOptions="Center" Style="{StaticResource LabelStyle}" />
        <Entry x:Name="LoginEntry" Placeholder="Логин" Style="{StaticResource EntryStyle}" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" Style="{StaticResource EntryStyle}" />
        <Button Text="Войти" Style="{StaticResource ButtonStyle}" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>

